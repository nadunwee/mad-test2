<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.HydraFit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnAccent</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="colorOnBackground">@color/onSurface</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Remove default action bar shadow -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>