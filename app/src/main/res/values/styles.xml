<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Optional alias if your project expects Theme.Hivemad -->
    <style name="Theme.Hivemad" parent="Theme.HydraFit" />

    <!-- Bottom Navigation Styles -->
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CustomBottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:alpha">0.1</item>
    </style>

    <!-- Modern Card Style -->
    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Modern Button Style -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/colorOnAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Modern Outlined Button Style -->
    <style name="ModernOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>