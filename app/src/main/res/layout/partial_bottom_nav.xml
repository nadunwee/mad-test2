<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/includeBottomNav"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bnavHome"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openHome"
            android:text="@string/nav_home"
            android:textAllCaps="false"
            android:textColor="@color/nav_item_color"
            android:contentDescription="@string/nav_home"
            app:icon="@drawable/ic_home"
            app:iconTint="@color/nav_item_color"
            app:iconSize="22dp"
            app:iconPadding="4dp"
            app:iconGravity="top" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bnavWorkout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openWorkout"
            android:text="@string/nav_workout"
            android:textAllCaps="false"
            android:textColor="@color/nav_item_color"
            android:contentDescription="@string/nav_workout"
            app:icon="@drawable/ic_fitness"
            app:iconTint="@color/nav_item_color"
            app:iconSize="22dp"
            app:iconPadding="4dp"
            app:iconGravity="top" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bnavStats"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openStats"
            android:text="@string/nav_stats"
            android:textAllCaps="false"
            android:textColor="@color/nav_item_color"
            android:contentDescription="@string/nav_stats"
            app:icon="@drawable/ic_stats"
            app:iconTint="@color/nav_item_color"
            app:iconSize="22dp"
            app:iconPadding="4dp"
            app:iconGravity="top" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bnavHydration"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openHydration"
            android:text="@string/nav_hydration"
            android:textAllCaps="false"
            android:textColor="@color/nav_item_color"
            android:contentDescription="@string/nav_hydration"
            app:icon="@drawable/ic_water"
            app:iconTint="@color/nav_item_color"
            app:iconSize="22dp"
            app:iconPadding="4dp"
            app:iconGravity="top" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bnavProfile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openProfile"
            android:text="@string/nav_profile"
            android:textAllCaps="false"
            android:textColor="@color/nav_item_color"
            android:contentDescription="@string/nav_profile"
            app:icon="@drawable/ic_profile"
            app:iconTint="@color/nav_item_color"
            app:iconSize="22dp"
            app:iconPadding="4dp"
            app:iconGravity="top" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>