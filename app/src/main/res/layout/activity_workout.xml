<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/workoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/workout_title"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/workoutIllustration"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card"
        android:contentDescription="@string/workout_title" />

    <EditText
        android:id="@+id/etWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_card"
        android:hint="@string/workout_hint_name"
        android:padding="12dp"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary" />

    <EditText
        android:id="@+id/etDuration"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_card"
        android:hint="@string/workout_hint_duration"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary" />

    <Button
        android:id="@+id/btnBegin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_primary_button"
        android:text="@string/workout_btn_begin"
        android:textColor="@color/colorOnAccent"
        android:textStyle="bold" />

    <!-- Bottom nav -->
    <include layout="@layout/partial_bottom_nav" />
</LinearLayout>