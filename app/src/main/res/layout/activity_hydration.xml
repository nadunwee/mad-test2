<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hydrationRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/hydrationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hydration_title"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card"
        android:padding="16dp">

        <TextView
            android:id="@+id/hydrationToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hydration_today"
            android:textColor="@color/textSecondary" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/circle_ring"
            android:contentDescription="@string/hydration_title" />

        <TextView
            android:id="@+id/hydrationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1.5 L"
            android:textColor="@color/textPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/hydration_goal"
            android:textColor="@color/textSecondary" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:text="@string/hydration_add_250"
            android:textColor="@color/colorOnAccent"
            android:textStyle="bold" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:text="@string/hydration_add_500"
            android:textColor="@color/colorOnAccent"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_chip"
        android:text="@string/hydration_reset"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</LinearLayout>